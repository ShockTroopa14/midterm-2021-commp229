  <!DOCTYPE html>
  <html lang="en">
    <head>
      <title></title>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
 <link rel="stylesheet" href="/client/Content/app.css" />
    </head>
    <body id="addBook-container">
       <!-- MAIN CONTENT -->
    <div class="container" id="background-container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
          <div class="venom-giff" ></div>
            <form action="/books/add" class="form" method="post" id="addBook-form">
              <div class="form-group">
                <label for="NameTextField">Title</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Book Title" name="title" required>
              </div>
               <div class="form-group">
                <label for="AuthorTextField">Description</label>
                <input type="text" class="form-control" id="descriptionTextFeild"
                placeholder="Book Description" name="description" required>
              </div>
              <div class="form-group">
                <label for="AuthorTextField">Price</label>
                <input type="text" class="form-control" id="PriceTextField"
                placeholder="Book Price" name="price" required>
              </div>
              <div class="form-group">
                <label for="GenreTextField">Author</label>
                <input type="text" class="form-control" id="AuthorTextField"
                placeholder="Book Author" name="author"   required>
              </div>
                 <div class="form-group">
                <label for="GenreTextField">Genre</label>
                <input type="text" class="form-control" id="GenreTextField"
                placeholder="Book Genre" name="genre"   required>
              </div>

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Add Comic Book</button>
              <a href="/books" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>
    </body>
  </html>
